<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".MapsActivity">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_above="@+id/location"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/log"
        android:text="location" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/musicname"
        android:text="Calculator"
        android:id="@+id/calculator"
        android:onClick="onOpenCalculator"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Select Music"
        android:id="@+id/music"
        android:onClick="onOpenMusicList"
        android:textAllCaps="false"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/musicname"
        android:layout_above="@id/music"
        android:text="xxxx"/>

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@id/music"
        android:text="play"
        android:id="@+id/play"
        android:onClick="onMusicPlay"
        android:maxHeight="3dp"
        android:background="@drawable/play"
        />

    <ImageButton
        android:id="@+id/stop"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/play"
        android:onClick="onMusicStop"
        android:text="Stop"
        android:background="@drawable/stop"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/calculator"
        android:text="LOG"
        android:id="@+id/log"
        android:onClick="onOpenLog"

        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Running"
        android:onClick="onRunStart"
        android:id="@+id/btnstart"
        android:layout_below="@+id/map"
        android:textAllCaps="false"
        android:layout_alignParentEnd="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Finish"
        android:onClick="onRunFinish"
        android:id="@+id/btnFinish"
        android:layout_below="@id/map"
        android:layout_alignParentEnd="true"
        android:textAllCaps="false"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="232dp"
        android:layout_marginStart="41dp"
        android:layout_below="@+id/map"
        android:text=""
        android:id="@+id/rundetail"/>
</RelativeLayout>