<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context="comp5216.sydney.edu.au.homework3.Calculator">

    <ImageButton
        android:id="@+id/calculatorBtn"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/caculator2"
        android:layout_centerHorizontal="true"/>

    <TableLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_below="@id/calculatorBtn">



        <TableRow

            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="Time(minutes)"
                android:padding="10dip"
                android:textSize="18sp"
                android:textColor="#000000"
                />

            <EditText
                android:text=""
                android:id="@+id/time"
                android:textSize="18sp"
                android:textColor="#000000"/>
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="Distance(kilometers)"
                android:padding="10dip"
                android:textSize="18sp"
                android:textColor="#000000"/>

            <EditText
                android:text=""
                android:id="@+id/distance" />
        </TableRow>

        <!-- red line -->


        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="Pace(min/km)"
                android:padding="10dip"
                android:textSize="18sp"
                android:textColor="#000000"/>

            <TextView
                android:text="0"
                android:id="@+id/pace"
                android:textSize="18sp"
                android:textColor="#000000"/>
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="Speed(km/hour)"
                android:padding="10dip"
                android:textSize="18sp"
                android:textColor="#000000"/>

            <TextView
                android:text="0"
                android:id="@+id/speed"
                android:textSize="18sp"
                android:textColor="#000000"/>
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="20dip"
            >
            <Button
                android:text="Calculate"
                android:onClick="calculate"
                android:textSize="18sp"
                android:textAllCaps="false"
                />
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="20dip"
            >
            <Button
                android:textSize="18sp"
                android:text="Back"
                android:onClick="back"
                android:textAllCaps="false"
                />
        </TableRow>

    </TableLayout>

</RelativeLayout>

